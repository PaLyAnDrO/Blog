      <label for="exampleInputPassword1" class="form-label">Title </label>
      <input
        required
        type="text"
        class="form-control"
        id="exampleInputPassword1"
        name="title"
      />
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Description</label>
      <input
        required
        type="text"
        class="form-control"
        id="exampleInputPassword1"
        name="author"
      />
    </div>

